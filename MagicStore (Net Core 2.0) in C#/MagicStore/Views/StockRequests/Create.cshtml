@model MagicStore.Models.StockRequest

@{
    ViewData["Title"] = "Magic Store";
}

<h2>New Stock Request</h2>

<h4>We have created a new stock request with these data</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Store.Name" class="control-label"></label>
            <label asp-for="Store.StoreID" class="form-control" asp-items="ViewBag.StoreName.Name">@ViewBag.StoreName</label>
        </div>
        <div class="form-group">
            <label asp-for="Product.Name" class="control-label"></label>
            <label asp-for="Product.ProductID" class="form-control" asp-items="ViewBag.ProductName.Name">@ViewBag.ProductName</label>
        </div>
        <div class="form-group">
            <label asp-for="Quantity" class="control-label"></label>
            <label asp-for="Quantity" class="form-control" asp-items="ViewBag.Threshold">@ViewBag.Quantity</label>
        </div>
    </div>
</div>

